---
import Layout from '../layouts/Layout.astro';

const contactSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "ContactPage",
      "@id": "https://koeln-fuehrerschein.de/kontakt/#contactpage",
      "name": "Kontakt - Koeln-Fuehrerschein",
      "description": "Kontaktieren Sie uns für Führerschein ohne Prüfung in Köln. WhatsApp, E-Mail oder Kontaktformular.",
      "url": "https://koeln-fuehrerschein.de/kontakt",
      "mainEntity": {
        "@id": "https://koeln-fuehrerschein.de/#organization"
      }
    },
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Startseite",
          "item": "https://koeln-fuehrerschein.de"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Kontakt",
          "item": "https://koeln-fuehrerschein.de/kontakt"
        }
      ]
    }
  ]
});
---

<Layout title="Kontakt | Führerschein kaufen Köln | Koeln-Fuehrerschein" description="Kontaktieren Sie Koeln-Fuehrerschein in 50667 Köln. WhatsApp: +49 176 36664625. Führerschein kaufen ohne Prüfung - Jetzt unverbindlich anfragen!" schema={contactSchema}>
	
	<main class="bg-gray-50">
		<!-- Hero Section -->
		<section class="bg-blue-900 text-white py-24 relative overflow-hidden">
            <div class="absolute inset-0 bg-blue-900 z-0"></div>
            <img src="/images/background-hero.webp" alt="Background" class="absolute inset-0 w-full h-full object-cover opacity-45 z-0 mix-blend-overlay" />
			<div class="container mx-auto px-4 text-center relative z-10">
				<h1 class="text-4xl lg:text-6xl font-bold mb-6 tracking-tight">Kontaktieren Sie Uns</h1>
				<p class="text-xl text-blue-100 max-w-2xl mx-auto leading-relaxed">
                    Wir stehen Ihnen gerne zur Verfügung. Schreiben Sie uns eine Nachricht oder kontaktieren Sie uns direkt über WhatsApp.
                </p>
			</div>
		</section>

		<!-- Contact Content -->
		<section class="py-24 -mt-20 relative z-20">
			<div class="container mx-auto px-4">
				<div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
				
                    <!-- Contact Info Cards -->
                    <div class="space-y-6">
                        <!-- WhatsApp Card -->
                        <div class="bg-white p-8  shadow-xl hover:-translate-y-1 transition duration-300 border border-gray-100 overflow-hidden relative">
                             <div class="absolute right-0 top-0 w-32 h-32 bg-green-50  -mr-8 -mt-8 z-0"></div>
                             <div class="relative z-10 flex items-start">
                                <div class="w-14 h-14 bg-green-100 text-green-600  flex items-center justify-center flex-shrink-0 mr-6 shadow-sm">
                                    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/></svg>
                                </div>
                                <div>
                                    <h3 class="text-xl font-bold text-gray-900 mb-1">WhatsApp Support</h3>
                                    <p class="text-gray-500 mb-4 text-sm">Der schnellste Weg zu uns (24/7)</p>
                                    <p class="text-lg font-mono font-bold text-gray-800 mb-4">+49 176 36664625</p>
                                    <a href="https://wa.me/4917636664625" class="inline-flex items-center text-green-600 font-bold hover:underline">
                                        Jetzt Chatten
                                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                                    </a>
                                </div>
                             </div>
                        </div>

                         <!-- Email Card -->
                        <div class="bg-white p-8  shadow-xl hover:-translate-y-1 transition duration-300 border border-gray-100 overflow-hidden relative">
                             <div class="absolute right-0 top-0 w-32 h-32 bg-blue-50  -mr-8 -mt-8 z-0"></div>
                             <div class="relative z-10 flex items-start">
                                <div class="w-14 h-14 bg-blue-100 text-blue-600  flex items-center justify-center flex-shrink-0 mr-6 shadow-sm">
                                    <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                                </div>
                                <div>
                                    <h3 class="text-xl font-bold text-gray-900 mb-1">E-Mail</h3>
                                    <p class="text-gray-500 mb-4 text-sm">Für allgemeine Anfragen</p>
                                    <p class="text-lg font-bold text-gray-800 mb-4 break-all">koeln-fuehrerschein@proton.me</p>
                                    <a href="mailto:koeln-fuehrerschein@proton.me" class="inline-flex items-center text-blue-600 font-bold hover:underline">
                                        E-Mail Senden
                                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                                    </a>
                                </div>
                             </div>
                        </div>

                        <!-- Location Card -->
                         <div class="bg-white p-8  shadow-xl hover:-translate-y-1 transition duration-300 border border-gray-100 overflow-hidden relative">
                             <div class="absolute right-0 top-0 w-32 h-32 bg-indigo-50  -mr-8 -mt-8 z-0"></div>
                             <div class="relative z-10 flex items-start">
                                <div class="w-14 h-14 bg-indigo-100 text-indigo-600  flex items-center justify-center flex-shrink-0 mr-6 shadow-sm">
                                    <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                                </div>
                                <div>
                                    <h3 class="text-xl font-bold text-gray-900 mb-1">Standort</h3>
                                    <p class="text-gray-500 mb-4 text-sm">Unser Büro in Köln</p>
                                    <p class="text-lg font-bold text-gray-800">50667 Köln</p>
                                    <p class="text-sm text-gray-600">Deutschland</p>
                                </div>
                             </div>
                        </div>
                    </div>

                    <!-- Contact Form -->
                    <div class="bg-white p-8 lg:p-10  shadow-2xl border border-gray-100">
                        <h2 class="text-2xl font-bold text-gray-900 mb-6">Schreiben Sie uns</h2>
                        <form class="space-y-6">
                            <div>
                                <label class="block text-gray-700 text-sm font-bold mb-2 ml-1" for="name">Ihr Name</label>
                                <input class="w-full px-5 py-4  bg-gray-50 border border-gray-200 focus:border-blue-500 focus:bg-white focus:ring-2 focus:ring-blue-200 transition outline-none" id="name" type="text" placeholder="Max Mustermann">
                            </div>
                             <div>
                                <label class="block text-gray-700 text-sm font-bold mb-2 ml-1" for="email">E-Mail Adresse</label>
                                <input class="w-full px-5 py-4  bg-gray-50 border border-gray-200 focus:border-blue-500 focus:bg-white focus:ring-2 focus:ring-blue-200 transition outline-none" id="email" type="email" placeholder="max@beispiel.de">
                            </div>
                             <div>
                                <label class="block text-gray-700 text-sm font-bold mb-2 ml-1" for="service">Gewünschter Service</label>
                                <div class="relative">
                                    <select class="w-full px-5 py-4 appearance-none bg-gray-50 border border-gray-200 focus:border-blue-500 focus:bg-white focus:ring-2 focus:ring-blue-200 transition outline-none cursor-pointer text-gray-700" id="service">
                                        <option value="" disabled selected>Bitte wählen...</option>
                                        <option value="de-fuehrerschein">Deutscher Führerschein</option>
                                        <option value="at-fuehrerschein">Österreichischer Führerschein</option>
                                        <option value="ch-fuehrerschein">Schweizer Führerschein</option>
                                        <option value="pl-fuehrerschein">Polnischer Führerschein</option>
                                        <option value="cz-fuehrerschein">Tschechischer Führerschein</option>
                                        <option value="hu-fuehrerschein">Ungarischer Führerschein</option>
                                        <option value="ru-fuehrerschein">Russischer Führerschein</option>
                                        <option value="ua-fuehrerschein">Ukrainischer Führerschein</option>
                                        <option value="mpu">MPU Gutachten</option>
                                        <option value="angelschein">Angelschein</option>
                                        <option value="bootsfuhrerschein">Bootsführerschein</option>
                                        <option value="other">Sonstige Anfrage</option>
                                    </select>
                                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-gray-500">
                                        <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
                                    </div>
                                </div>
                            </div>
                             <div>
                                <label class="block text-gray-700 text-sm font-bold mb-2 ml-1" for="message">Ihre Nachricht</label>
                                <textarea class="w-full px-5 py-4  bg-gray-50 border border-gray-200 focus:border-blue-500 focus:bg-white focus:ring-2 focus:ring-blue-200 transition outline-none" id="message" rows="5" placeholder="Wie können wir Ihnen helfen?"></textarea>
                            </div>
                            <button class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-4 px-6  shadow-lg hover:shadow-xl transition duration-300 transform hover:-translate-y-1" type="button">
                                NACHRICHT SENDEN
                            </button>
                        </form>
                    </div>
				</div>
			</div>
		</section>

        <!-- CTA Strip -->
         <section class="py-16 bg-white">
            <div class="container mx-auto px-4 text-center">
                <h3 class="text-2xl font-bold text-gray-900 mb-4">Häufig gestellte Fragen</h3>
                <p class="text-gray-600 mb-8 max-w-xl mx-auto">Viele Fragen werden bereits in unserem FAQ-Bereich beantwortet.</p>
                <a href="/faqs" class="inline-block border-2 border-blue-600 text-blue-600 font-bold py-3 px-8  hover:bg-blue-50 transition duration-300">
                    Zu den FAQs
                </a>
            </div>
         </section>

	</main>
</Layout>
